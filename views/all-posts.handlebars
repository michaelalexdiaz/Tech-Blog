<div class="posts">
  {{#each posts}}
  <article class="mb-1 border-solid border-4">
    <div class="flex-row justify-between p-0.5 border-solid border-4 rounded">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="p-0.5">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>